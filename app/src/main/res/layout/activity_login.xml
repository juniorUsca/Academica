<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.debugcc.academica.Activities.LoginActivity">

    <FrameLayout android:layout_height="match_parent"
        android:layout_width="match_parent">

        <ImageView android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/login_background"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <com.facebook.login.widget.LoginButton
                android:id="@+id/facebook_button_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <Button
                android:id="@+id/fake_facebook_button_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresar con Facebook"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/facebook_button_background_color"
                android:textColor="@color/login_button_text_color"/>

            <com.google.android.gms.common.SignInButton
                android:id="@+id/google_button_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <Button
                android:id="@+id/fake_google_button_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresar con Google"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@color/google_button_background_color"
                android:textColor="@color/login_button_text_color"/>

        </LinearLayout>
    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>

